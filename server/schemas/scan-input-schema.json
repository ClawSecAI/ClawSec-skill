{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://clawsec.ai/schemas/scan-input.json",
  "title": "ClawSec Scan Input",
  "description": "Schema for ClawSec scan request payload",
  "type": "object",
  "properties": {
    "gateway": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "rate_limit": {
          "type": "object"
        }
      }
    },
    "sessions": {
      "type": "object",
      "properties": {
        "encryption": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "key": {
              "type": "string"
            }
          }
        }
      }
    },
    "tools": {
      "type": "object",
      "properties": {
        "exec": {
          "type": "object",
          "properties": {
            "policy": {
              "type": "string",
              "enum": ["allow-all", "allowlist", "denylist", "prompt"]
            }
          }
        }
      }
    },
    "channels": {
      "type": "object",
      "properties": {
        "telegram": {
          "type": "object",
          "properties": {
            "bot_token": {
              "type": "string"
            },
            "allowed_chats": {
              "type": "array",
              "items": {
                "type": ["string", "number"]
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
